@model IEnumerable<MusicApp.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout"; // Admin'e özel bir layout kullanıyorsanız, bunu belirtin.
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>Rol</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="text-success">Aktif</span>
                    }
                    else
                    {
                        <span class="text-danger">Pasif</span>
                    }
                </td>
                <td>
                    <form method="post" asp-action="ToggleUserStatus">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-warning">
                            @if (user.IsActive)
                            {
                                @:Pasif Yap
                            }
                            else
                            {
                                @:Aktif Yap
                            }
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
