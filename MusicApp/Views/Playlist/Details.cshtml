@model IEnumerable<MusicApp.Models.Song>

@{
    ViewData["Title"] = ViewBag.Playlist.Name + " - Detaylar";
}

<!-- CSS Dosyasını Bağlama -->
<link rel="stylesheet" href="/css/playlist-details.css">

<h2 class="playlist-title">@ViewBag.Playlist.Name</h2>

@if (!Model.Any())
{
    <p class="no-songs">Bu çalma listesinde henüz şarkı yok.</p>
}
else
{
    <table class="playlist-table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Sanatçı</th>
                <th>Albüm</th>
                <th>Dinle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model)
            {
                <tr>
                    <td>@song.Title</td>
                    <td>@song.Artist</td>
                    <td>@song.Album</td>
                    <td>
                        <audio controls>
                            <source src="~/@song.FilePath" type="audio/mpeg">
                            Tarayıcınız bu sesi desteklemiyor.
                        </audio>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
