@model MusicApp.Models.User

@{
    ViewData["Title"] = "Profil";
}

<!-- CSS Bağlantısı -->
<link rel="stylesheet" href="/css/profile.css">

<h2 class="profile-title">Profilim</h2>

@if (ViewBag.Message != null)
{
    <p class="success-message">@ViewBag.Message</p>
}

@if (ViewBag.Error != null)
{
    <p class="error-message">@ViewBag.Error</p>
}

<h3 class="section-title">Bilgilerim</h3>
<form method="post" asp-controller="User" asp-action="UpdateProfile" class="profile-form">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="username">Kullanıcı Adı:</label>
        <input type="text" name="username" id="username" value="@Model.Username" required />
    </div>
    <div class="form-group">
        <label for="email">E-posta:</label>
        <input type="email" name="email" id="email" value="@Model.Email" required />
    </div>
    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
</form>

<h3 class="section-title">Şifre Güncelle</h3>
<form method="post" asp-controller="User" asp-action="UpdatePassword" class="password-form">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="currentPassword">Mevcut Şifre:</label>
        <input type="password" name="currentPassword" id="currentPassword" required />
    </div>
    <div class="form-group">
        <label for="newPassword">Yeni Şifre:</label>
        <input type="password" name="newPassword" id="newPassword" required />
    </div>
    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
</form>
